---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/space-grotesk";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Brayan Martinez Portfolio</title>
  </head>
  <body>
    <div
      class="absolute inset-0 -z-10 w-full bg-black bg-[linear-gradient(to_right,#6A6A6A10_1px,transparent_1px),linear-gradient(to_bottom,#6A6A6A10_1px,transparent_1px)] bg-[size:6rem_6rem]"
    >
      <div
        class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_600px_at_100%_200px,#4B47FF50,transparent)]"
      >
      </div>

      <div
        class="absolute bottom-auto left-auto right-0 top-0 h-[500px] w-[500px] -translate-x-[85vw] translate-y-[80%] rounded-full bg-[rgba(116,214,247,0.56)] opacity-50 blur-[80px]"
      >
      </div>
    </div>

    <Header />
    <slot />
    <div
      class="relative inset-0 -z-10 w-full% bg-black bg-[linear-gradient(to_right,#6A6A6A10_1px,transparent_1px),linear-gradient(to_bottom,#6A6A6A10_1px,transparent_1px)] bg-[size:6rem_6rem]"
    >
      <div
        class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_600px_at_100%_200px,#4B47FF50,transparent)]"
      >
      </div>

      <div
        class="absolute bottom-auto left-auto right-0 top-0 h-[500px] w-[500px] -translate-x-[0] translate-y-[-220%] md:translate-y-[-150%] rounded-full bg-[rgb(89,255,197)] opacity-20 blur-[80px]"
      >
      </div>
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    font-family: "space grotesk variable", system-ui, sans-serif;
    color-scheme: light dark;
    scroll-behavior: smooth;
  }

  body {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: black;
  }
</style>
