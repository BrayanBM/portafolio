---
import brayanIcon from "../components/icons/logoBryan.svg";
---

<nav
  class="flex items-center justify-between w-full px-8 bg-black bg-opacity-40 backdrop-filter backdrop-blur-xl sticky top-0 z-10"
>
  <div
    class="md:h-16 h-28 mx-auto md:px-4 container flex items-center justify-between flex-wrap md:flex-nowrap"
  >
    <div class="text-indigo-500 md:order-1">
      <img
        class="rounded-full w-12 h-12"
        src={brayanIcon.src}
        alt="logo bryan"
      />
    </div>
    <div class="text-gray-500 order-3 w-full md:w-auto md:order-2">
      <ul class="flex justify-between text-sm md:text-lg">
        <li class="md:px-4 md:py-2 hover:text-blue-200">
          <a href="#skills">Skills</a>
        </li>
        <li class="md:px-4 md:py-2 hover:text-blue-200">
          <a href="#experience">Experiencia</a>
        </li>
        <li class="md:px-4 md:py-2 hover:text-blue-200">
          <a href="#proyects">Proyectos</a>
        </li>
        <li class="md:px-4 md:py-2 hover:text-blue-200">
          <a
            class="flex flex-row gap-1"
            href="src/BRAYAN_CV.pdf"
            download="Brayan Martinez CV.pdf"
            >Descargar CV <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-download"
              width="19"
              height="19"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path><path
                d="M7 11l5 5l5 -5"></path><path d="M12 4l0 12"></path></svg
            ></a
          >
        </li>
      </ul>
    </div>
    <div class="order-2 md:order-3">
      <a
        class="px-4 py-2 bg-blue-600 hover:bg-blue-800 text-white-900 rounded-xl flex items-center gap-2"
        href="https://bento.me/brayan-martinez"
        target="_blank"
      >
        <span>Contactame</span>
      </a>
    </div>
  </div>
</nav>
